{
  "compilerOptions" : {
    "module" : "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "target" : "es5",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap" : true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "mocha",
    "node",
    "chai"
  ],
  "exclude" : [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
